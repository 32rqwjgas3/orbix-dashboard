<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Select Server</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <section class="dashboard-grid">
    <div class="container">
      <h1>Select a Server</h1>
      <div class="server-list">
        <% guilds.forEach(guild => { %>
          <div class="server-card">
            <% if (guild.icon) { %>
              <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" alt="<%= guild.name %>" />
            <% } else { %>
              <div class="server-placeholder"><%= guild.name.charAt(0) %></div>
            <% } %>
            <h3><%= guild.name %></h3>
            <% if (guild.hasBot) { %>
              <a href="/dashboard/<%= guild.id %>" class="cta-button">Open Dashboard</a>
            <% } else { %>
              <a href="https://discord.com/oauth2/authorize?client_id=<%= clientId %>&scope=bot&permissions=8&guild_id=<%= guild.id %>" class="cta-button">Invite Bot</a>
            <% } %>
          </div>
        <% }) %>
      </div>
    </div>
  </section>
</body>
</html>
